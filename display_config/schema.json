{
	"title": "Display Driver Definition",
	"description": "A file detailing how a display will be interfaced with by Adafruit WipperSnapper",
	"type": "object",
	"required": [ "dispDriver", "dispWidth", "dispHeight", "dispRotation"],
	"properties": {
		"dispDriver": {
			"description": "The human-friendly name of the display driver (ST7789 | ST7735 | ILI9341 | HX8357).",
			"type": "string",
			"minLength": 3,
			"maxLength": 10
		},
		"dispWidth": {
			"description": "Display's horizontal width, in pixels.",
			"type": "number",
			"minLength": 32,
			"maxLength": 750
		},
		"dispHeight": {
			"description": "Display's vertical height, in pixels.",
			"type": "number",
			"minLength": 32,
			"maxLength": 750
		},
		"dispRotation": {
			"description": "Display's rotation, in degrees.",
			"type": "number",
			"minLength": 0,
			"maxLength": 360
		},
		"dispSPI": {
			"type": "object",
			"properties": {
				"spiMode": {
					"description": "The SPI interface's mode, either: (1) Hardware SPI or (2) Software SPI",
					"type": "number"
				},
				"pin_cs": {
					"type": "number"
				},
				"pin_dc": {
					"type": "number"
				},
				"pin_mosi": {
					"type": "number"
				},
				"pin_sck": {
					"type": "number"
				},
				"pin_rst": {
					"type": "number"
				}
			}
		},
		"dispI2C": {
			"type": "object",
			"properties": {
				"address": {
					"description": "The I2C address, in hexadecimal.",
					"type": "string"
				},
				"pin_scl": {
					"type": "number"
				},
				"pin_sda": {
					"type": "number"
				},
				"pin_rst": {
					"type": "number"
				}
			}
		}
	}
}